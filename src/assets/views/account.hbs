<div class="container-fluid mt-5 mb-5">
    <div class="title text-center">
        <h4>
            <i class="fas fa-user"></i>
            Hesaplarım
        </h4>
    </div>
    <div class="button-group">
        <button class="btn btn-primary btn-sm" id="open_account_modal">
            Hesap Ekle
        </button>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Hesap Adı</th>
                        <th scope="col">Şifre</th>
                        <th scope="col">2FA</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each accounts}}
                    <tr>
                        <th>
                            {{this.username}}
                        </th>
                        <td>
                            {{this.password}}
                        </td>
                        <td>
                            {{this.two_factory}}
                        </td>
                        <td>
                            <a href="/account/delete/{{this.id}}" class="btn btn-danger btn-sm text-white">
                                Sil
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="add_account_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title fs-5" id="exampleModalLabel">Hesap Ekle</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/account" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="username" autocomplete="off">
                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Şifre" name="password" autocomplete="off">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="2FA" name="two_factory" autocomplete="off">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Hesap Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#open_account_modal').click(function () {
            $('#add_account_modal').modal('show');
        });
    });
</script>