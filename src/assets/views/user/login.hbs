<div class="container">
    <div class="row">
        <div class="col-md-5 mt-auto mb-auto">
            <div class="title text-center mt-4 mb-4">
                <h4>
                    Giriş Yap
                </h4>
            </div>
            <form action="/user/login" method="post">
                <div class="row mb-4">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Mail Adresi" name="email"
                            autocomplete="off">
                    </div>
                    <div class="col">
                        <input type="password" class="form-control" placeholder="Şifre" name="password"
                            autocomplete="off">
                    </div>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary btn-sm">
                        Giriş Yap
                    </button>
                </div>
                <div class="getLogin text-center">
                    <p>Hesabınız Yoksa <a href="/user/register" class="text-primary">Kayıt Olun</a>.</p>
                </div>

            </form>
        </div>
        <div class="col-md-7">
            <img src="/public/images/login.svg" alt="">
        </div>
    </div>
</div>