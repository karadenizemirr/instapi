<div class="container-fluid mt-5 mb-5">
    <div class="title text-center">
        <h4>
            Hashtag
        </h4>
    </div>
    <div class="button-group">
        <button class="btn btn-primary btn-sm" id="open_hashtag_modal">
            Hashtag Ekle
        </button>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Hashtag</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each hashtags}}
                    <tr>
                        <th>
                            {{this.hashtag}}
                        </th>
                        <td>
                            <a href="/hashtag/delete/{{this.id}}" class="btn btn-danger btn-sm text-white">
                                Sil
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="add_hashtag_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title fs-5" id="exampleModalLabel">Hashtag Ekle</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/hashtag" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Hashtag" name="hashtag" autocomplete="off">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Hashtag Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#open_hashtag_modal').click(function () {
            $('#add_hashtag_modal').modal('show');
        });
    });
</script>